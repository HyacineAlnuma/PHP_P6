{% extends "base.html.twig" %}

{% block body %}
    {% if app.user %}
        <img src="{{ asset('uploads/images/' ~ user.imageFileName) }}" alt="">
    {% endif %}

    {% for message in app.flashes('success') %}
        <div>
            {{ message }}
        </div>
    {% endfor %}

    {% for trick in tricks %}
        <h2>{{ trick.name }}</h2>
        <p>{{ trick.author }}</p>
        <p>{{ trick.description }}</p>
        <a href="{{ url('show_trick', {slug: trick.slug}) }}">Lien vers le trick</a>
        <a href="{{ url('update_trick', {slug: trick.slug}) }}">Mettre Ã  jour</a>
        <a href="{{ url('delete_trick', {slug: trick.slug}) }}">Supprimer</a>
    {% endfor %}
{% endblock %}