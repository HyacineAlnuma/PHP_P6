{% extends "base.html.twig" %}

{% block body %}
<div class="ftco-blocks-cover-1">
      <div class="site-section-cover overlay" style="background-image: url('images/hero_1.jpg')">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-5" data-aos="fade-up">
              <h1 class="mb-3 text-white">Trips List</h1>
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta veritatis in tenetur doloremque, maiores doloribus officia iste. Dolores.</p>
              
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="site-section">

    {% for message in app.flashes('success') %}
        <div>
            {{ message }}
        </div>
    {% endfor %}

      <div class="container">
        <div class="row justify-content-center text-center">
          <div class="col-md-7">
            <div class="heading-39101 mb-5">
              <span class="backdrop text-center">Snowboard</span>
              <span class="subtitle-39191">Tricks</span>
              <h3>Découvrez les tricks</h3>
            </div>
          </div>
        </div>
    <div class="row">
    {% for trick in tricks %}
          <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up">
          
            <div class="listing-item">
            
              <div class="listing-image">
                <img src="{{ asset('uploads/images/defaultImage.png') }}" alt="Image" class="img-fluid">
              </div>
           
              <div class="listing-item-content">
                <a class="px-3 mb-3 category bg-primary" href="{{ url('update_trick', {slug: trick.slug}) }}">Modifier</a>
                <a class="px-3 mb-3 category bg-primary" href="{{ url('delete_trick', {slug: trick.slug}) }}">Supprimer</a>
                <a href="{{ url('show_trick', {slug: trick.slug}) }}"><h2 class="mb-1">{{ trick.name }}</h2></a>
              </div>
            </div>
            
          </div>
    {% endfor %}
        </div>
      </div>
    </div>

    {# {% if app.user %}
        <img src="{{ asset('uploads/images/' ~ user.imageFileName) }}" alt="">
    {% endif %}

    {% for trick in tricks %}
        <h2>{{ trick.name }}</h2>
        <p>{{ trick.author }}</p>
        <p>{{ trick.description }}</p>
        <a href="{{ url('show_trick', {slug: trick.slug}) }}">Lien vers le trick</a>
        <a href="{{ url('update_trick', {slug: trick.slug}) }}">Mettre à jour</a>
        <a href="{{ url('delete_trick', {slug: trick.slug}) }}">Supprimer</a>
    {% endfor %} #}
{% endblock %}