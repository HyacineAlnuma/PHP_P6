{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="ftco-blocks-cover-1 form-cover-auth">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7 form-bg">
            <div class="form-style"> 
            <h1 class="mb-4">Réinitialisation du mot de passe</h1>
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email, {
                        label: "Email",
                        label_attr: {
                            class: 'form-label'
                        },
                        row_attr: {
                            class: 'form-row'
                        }
                    }) }}
                    <div>
                        <p>
                            Entrez votre adresse email et nous vous enverrons un email de réinitialisation du mot passe.
                        </p>
                    </div>

                    <button class="btn btn-primary">Envoyer</button>
                {{ form_end(requestForm) }}
            </div>  
            </div>
          </div>
        </div>
    </div>
{% endblock %}
