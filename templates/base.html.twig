<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                <li><a href="{{ url('home') }}">Accueil</a></li>
                <li><a href="{{ url('addTrick') }}">Créer une nouvelle figure</a></li>
                {% if app.user %}
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                {% else %}
                <li><a href="{{ url('app_register') }}">Inscription</a></li>
                <li><a href="{{ url('app_login') }}">Connexion</a></li>  
                {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
